#!/bin/tcsh

#PBS  -o BATCH_OUTPUT.sra
#PBS  -e BATCH_ERRORS.sra
 
#PBS -lnodes=1:ppn=16:compute,walltime=4:00:00
 
cd $PBS_O_WORKDIR

module use /shared/software/bcb660/modules
module load sra
setenv folderPath "/ptmp/jain/Final_Project/tophat_output/*.sra"
setenv outfolder "./"

for f in $folderPath
do
    if [[ -f $f ]]; then
	fastq-dump -O $outfolder $f &
    fi
done
wait
