#!/bin/tcsh

#PBS  -o BATCH_OUTPUT.patient_22_IDC.tophat
#PBS  -e BATCH_ERRORS.patient_22_IDC.tophat
 
#PBS -lnodes=4:ppn=16:compute,walltime=16:00:00
 
cd $PBS_O_WORKDIR

module use /shared/software/bcb660/modules
module load TopHat
module load bowtie
setenv filespath "/ptmp/jain/Final_Project/Raw_BC_Samples/Homo_sapiens/UCSC/hg19/"
#setenv fileName = "patient_24_IDC.sra"

tophat -p 16 -G $filespath/Annotation/Genes/genes.gtf -o tophat_output/Normal_22_hg19  $filespath/Sequence/Bowtie2Index/genome ./Raw_BC_Samples/patient_22_normal.fastq &

tophat -p 16 -G $filespath/Annotation/Genes/genes.gtf -o tophat_output/IDC_22_hg19  $filespath/Sequence/Bowtie2Index/genome ./Raw_BC_Samples/patient_22_IDC.fastq &

wait
