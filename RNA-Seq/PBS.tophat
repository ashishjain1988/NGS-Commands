#!/bin/tcsh

#PBS  -o BATCH_OUTPUT.patient_24_IDC.tophat
#PBS  -e BATCH_ERRORS.patient_24_IDC.tophat
 
#PBS -lnodes=4:ppn=16:compute,walltime=48:00:00
 
cd $PBS_O_WORKDIR

module use /shared/software/bcb660/modules
module load TopHat
module load bowtie
setenv filespath "/ptmp/jain/Final_Project/Raw_BC_Samples/Homo_sapiens/UCSC/hg19/"
#setenv fileName = "patient_24_IDC.sra"

tophat -p 16 -G $filespath/Annotation/Genes/genes.gtf -o tophat_output/Normal_24_hg19_trim  $filespath/Sequence/Bowtie2Index/genome ./Raw_BC_Samples/patient_24_normal_trimmed.fastq &

tophat -p 16 -G $filespath/Annotation/Genes/genes.gtf -o tophat_output/IDC_24_hg19_trim  $filespath/Sequence/Bowtie2Index/genome ./Raw_BC_Samples/patient_24_IDC_trimmed.fastq &

wait
